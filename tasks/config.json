{
  "dir": {
    "tmp":              ".tmp",
    "build":            "build",
    "templates":        "/templates"
  },

  "tmpDir": {
    "styles":           ".tmp/styles",
    "scripts":          ".tmp/scripts",
    "vendors":          ".tmp/scripts/vendors"
  },

  "buildDir": {
    "styles":           "build/styles",
    "scripts":          "build/scripts"
  },

  "files": {
    "index":            "app/index.jade",
    "styles":           "app/styles/**/*.styl",
    "scripts":          "app/scripts/**/*.coffee",
    "templates":        "app/templates/**/*.jade",

    "karma":            "karma.conf.coffee",
    "protractor":       "protractor.conf.coffee"
  },

  "outputFiles": {
    "styles":           "styles/**/*.css",
    "vendors":          "scripts/vendors/*.js",
    "scripts":          ["scripts/**/*.js", "!scripts/vendors/*.js"]
  }
}
